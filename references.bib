  file = {/home/dulacw/Zotero/storage/FJC8SKU5/Schenkel et Hart - 2012 - An Examination of Tropical Cyclone Position, Inten.pdf;/home/dulacw/Zotero/storage/YEJWC95A/2011jcli4208.1.html}
