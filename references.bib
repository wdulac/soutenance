  keywords = {Atmospheric dynamics,Environmental impact,Natural hazards},
  file = {/home/dulacw/Zotero/storage/L6YL5B52/Bloemendaal et al. - 2020 - Generation of a global synthetic tropical cyclone .pdf;/home/dulacw/Zotero/storage/S6V4DS3K/s41597-020-0381-2.html}
